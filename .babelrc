{
  "env": {
    "test": {
      "plugins": [
        [
          "babel-plugin-module-resolver",
          {
            "root": [
              "./"
            ],
            "alias": {
              "@": "./",
              "~": "./"
            }
          }
        ]
      ],
      "ignore": [
        "ava.config.js"
      ],
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    }
  }
}
